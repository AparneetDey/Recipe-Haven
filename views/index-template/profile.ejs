<!-- Profile Container -->
<div class="profile-container">
    <!-- Banner -->
    <div class="bannerPic">
        <form method="POST" id="deleteBannerBtn" class="delete-btn delete-banner" action="/remove-banner-photo">
            <button type="submit"><i class="fa-regular fa-trash-can fa-xs"></i></button>
        </form>
        <form class="banner" id="banner" action="/upload-banner" method="POST" enctype="multipart/form-data">
            <input type="file" id="uploadBanner" name="bannerPhoto">
            <label for="uploadBanner" class="upload-area" id="uploadArea">
                <div class="upload-banner" id="bannerUpload"></div>
            </label>
        </form>
    </div>

    <!-- User Info Section -->
    <div class="user-info">
        <div class="userPic">
            <form method="POST" id="deletePicBtn" class="delete-btn delete-profile-pic" action="/remove-profile-photo">
                <button type="submit"><i class="fa-regular fa-trash-can fa-xs"></i></button>
            </form>
            <form class="profile-pic" action="/upload-profile" method="POST" enctype="multipart/form-data">
                <label for="profileUpload">
                    <div class="profile-icon" id="profileIcon"></div>
                </label>
                <input type="file" id="profileUpload" name="profilePhoto" style="display: none;">
            </form>
        </div>
        <!-- username -->
        <h2 class="username">
            <%= user.username %>
        </h2>
        <!-- bio -->
        <textarea id="profileBio" class="bio" spellcheck="false" name="bio" placeholder="Write your bio..."><%= user.bio %></textarea>

        <!-- Food Preferences -->
        <div class="food-tags">
            <span>Italian</span>
            <span>Desserts</span>
            <span>Vegan</span>
            <span>Asian</span>
        </div>
    </div>

    <!-- User Posts -->
    <div class="user-posts">
        <h3 style="margin: 16px;">My Recipes</h3>
        <section class="recipe-cards">
            <div class="card">
                <img loading="lazy" src="/Images/pasta.jpg" alt="Pasta Recipe">
                <h3>Pasta Delight</h3>
                <p>Brought together the freshest ingredients and bold flavors to create mouthwatering pasta
                    dishes that
                    are sure to satisfy your cravings with every bite.</p>
            </div>

            <div class="card">
                <img loading="lazy" src="/Images/sushi.jpg" alt="Sushi Recipe">
                <h3>Fresh Sushi</h3>
                <p>Experience the perfect balance of delicate flavors and premium ingredients, crafted to
                    bring you the
                    freshest and most authentic sushi in every bite.</p>
            </div>

            <div class="card">
                <img loading="lazy" src="/Images/tacos.jpg" alt="Tacos Recipe">
                <h3>Spicy Tacos</h3>
                <p>A fiery explosion of bold flavors and vibrant spices, wrapped in a perfectly crisp shell
                    for the
                    ultimate taco experience.</p>
            </div>
        </section>
    </div>
</div>